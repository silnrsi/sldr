<?xml version="1.0" encoding="utf-8"?>
<ldml xmlns:sil="urn://www.sil.org/ldml/0.1">
	<identity>
		<version number="0.0.1"/>
		<language type="ngl"/>
		<special>
			<sil:identity defaultRegion="MZ" script="Latn"/>
		</special>
	</identity>
	<localeDisplayNames>
		<languages>
			<language type="ngl">Elomwe</language>
		</languages>
		<special>
			<sil:names>
				<sil:name xml:lang="en">Lomwe</sil:name>
			</sil:names>
		</special>
	</localeDisplayNames>
	<layout>
		<orientation>
			<characterOrder>left-to-right</characterOrder>
			<lineOrder>top-to-bottom</lineOrder>
		</orientation>
	</layout>
	<characters>
		<exemplarCharacters>[a e i o u {aa} {ee} {ii} {oo} {uu} c h k {kh} l {ly} m n p {ph} {pw} r s t v w y]</exemplarCharacters>
		<exemplarCharacters type="auxiliary">[b d f g j q x z]</exemplarCharacters>
		<exemplarCharacters type="index">[A E I O U {Aa} {Ee} {Ii} {Oo} {Uu} C H K {Kh} L {Ly} M N P {Ph} {Pw} R S T V W Y]</exemplarCharacters>
		<exemplarCharacters type="punctuation">[. , ; \: ? ! ( )]</exemplarCharacters>
	</characters>
	<delimiters>
		<quotationStart>“</quotationStart>
		<quotationEnd>”</quotationEnd>
		<alternateQuotationStart>‘</alternateQuotationStart>
		<alternateQuotationEnd>’</alternateQuotationEnd>
	</delimiters>
	<numbers>
		<defaultNumberingSystem>latn</defaultNumberingSystem>
	</numbers>
	<collations>
		<collation type="standard" references="L001">
			<cr><![CDATA[
				&A < e <<< E < i <<< I < o <<< O < u <<< U < aa <<< Aa <<< AA < ee <<< Ee <<< EE < ii <<< Ii <<< II < oo <<< Oo <<< OO < uu <<< Uu <<< UU
				&K < kh <<< Kh <<< KH
				&L < ly <<< Ly <<< LY
				&P < ph <<< Ph <<< PH < pw <<< Pw <<< PW
			]]></cr>
			<special>
				<sil:simple>a/A
				e/E
				i/I
				o/O
				u/U
				aa
				ee
				ii
				oo
				uu
				c/C
				h/H
				k/K
				kh
				l/L
				ly
				m/M
				n/N
				p/P
				ph
				pw
				r/R
				s/S
				t/T
				v/V
				w/W
				y/Y</sil:simple>
			</special>
		</collation>
	</collations>
	<references>
		<reference type="L001">REAP; Vocabulário de Elomwe, 2010.</reference>
	</references>
	<special>
		<sil:external-resources>
			<sil:font name="Charis">
				<sil:url>https://lff.api.languagetechnology.org/family/charis</sil:url>
			</sil:font>
		</sil:external-resources>
	</special>
</ldml>

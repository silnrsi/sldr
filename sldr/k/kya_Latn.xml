<?xml version='1.0' encoding='utf-8'?>
<ldml xmlns:sil="urn://www.sil.org/ldml/0.1">
  <identity>
  	<special xmlns:sil="urn://www.sil.org/ldml/0.1">
   		 <sil:identity defaultRegion="TZ"/>  <!-- country code - 2 letters -->
   	 </special>
    <language type="kya"/>   <!-- language code - should match file name, 2 or 3 letters -->
    <script type="Latn"/>    <!-- script code -->
  </identity>
  <characters>
  	<!-- use draft="proposed" for more-than-typically reliable data -->
  	<!-- only necessary to put a single references attribute on the main exemplar list. -->
    <exemplarCharacters type="" draft="tentative" references="L001">[ a {bh} {ch} d e f g i j k m n {ng'} ny o p r s {sh} t u w y \u003a \u005e \u007e \u0301 ]</exemplarCharacters>
    <exemplarCharacters type="auxiliary" draft="tentative">[  ]</exemplarCharacters>
    <exemplarCharacters type="index" draft="tentative">[ A {BH} {CH} D E F G I J K M N {NG'} NY O P R S {SH} T U W Y ]</exemplarCharacters>
    <exemplarCharacters type="punct" draft="tentative">[ . , ; : ? ! ( ) ]</exemplarCharacters>
  </characters>
  <numberingSystem id="latn" type="numeric" digits="0123456789"/>
  <delimiters>
 		<quotationStart>“</quotationStart>     <!-- outer quotes -->
		<quotationEnd>”</quotationEnd>
		<alternateQuotationStart>‘</alternateQuotationStart>  <!-- inner quotes -->
		<alternateQuotationEnd>’</alternateQuotationEnd>
  </delimiters>
  <layout>
    <orientation characters="left-to-right" lines="top-to-bottom"/>  <!-- right-to-left -->
  </layout>
  <special>
    <sil:external-resources>
		<!--check if language uses font features; if so, use syntax from original full template and reference ldml_fontsAndFeatures.css -->
      <sil:font engines="ot gr" name="Charis SIL"> 
        <sil:url>https://wirl.api.sil.org/CharisSIL</sil:url>
      </sil:font>
    </sil:external-resources>
  </special>
  <collations>
    <collation type="standard" references="L001">  <!-- generally type will be 'standard' -->
			<sil:simple>
            </sil:simple>
			</special>
    </collation>
  </collations>
  <references>
  	<reference type="L001"> REAP; Kwaya Orthography Statement, 2016. 
  	</reference>
  </references>
</ldml>

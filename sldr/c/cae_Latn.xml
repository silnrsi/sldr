<?xml version="1.0" encoding="utf-8"?>
<ldml xmlns:sil="urn://www.sil.org/ldml/0.1">
	<identity>
		<version number="0.0.1"/>
		<language type="cae"/>
		<!-- language code - should match file name, 2 or 3 letters -->
		<script type="Latn"/>
		<!-- script code -->
		<special>
			<sil:identity defaultRegion="SN"/>
			<!-- country code - 2 letters -->
		</special>
	</identity>
	<layout>
		<orientation characters="left-to-right" lines="top-to-bottom"/>
		<!-- right-to-left -->
	</layout>
	<characters>
		<!-- use draft="proposed" for more-than-typically reliable data -->
		<!-- only necessary to put a single references attribute on the main exemplar list. -->
		<exemplarCharacters draft="tentative" references="L001">[ \u02c8 a {aa} b ɓ c d ɗ e {ee} é {ée} ë {ëe} f g h i {ii} í {íi} j k l m {mb} n {nd} ñ {nj} ŋ {ng} o {oo} ó {óo} p r s t u {uu} ú {úu} w y ƴ ]</exemplarCharacters>
		<exemplarCharacters type="auxiliary" draft="tentative">[  ]</exemplarCharacters>
		<exemplarCharacters type="index" draft="tentative">[ A {AA} B Ɓ C D Ɗ E {EE} É {ÉE} Ë {ËE} F G H I {II} Í {ÍI} J K L M {MB} N {ND} Ñ {NJ} Ŋ {NG} O {OO} Ó {ÓO} P R S T U {UU} Ú {ÚU} W Y Ƴ ]</exemplarCharacters>
		<exemplarCharacters type="punctuation" draft="tentative">[ . : … , ; ! ? – - / \[ \] ( ) { } « » ]</exemplarCharacters>
	</characters>
	<delimiters>
		<quotationStart>“</quotationStart>
		<!-- outer quotes -->
		<quotationEnd>”</quotationEnd>
		<alternateQuotationStart>‘</alternateQuotationStart>
		<!-- inner quotes -->
		<alternateQuotationEnd>’</alternateQuotationEnd>
	</delimiters>
	<numbers>
		<defaultNumberingSystem>latn</defaultNumberingSystem>
	</numbers>
	<collations>
		<collation type="standard" references="L001">
			<!-- generally type will be 'standard' -->
			<special>
				<sil:simple>a/A
				aa
				b/B
				ɓ/Ɓ
				c/C
				d/D
				ɗ/Ɗ
				e/E
				ee
				é/É
				ée
				ë/Ë
				ëe
				f/F
				g/G
				h/H
				i/I
				ii
				í/Í
				íi

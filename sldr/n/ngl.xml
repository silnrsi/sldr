<?xml version="1.0" encoding="utf-8"?>
<ldml xmlns:sil="urn://www.sil.org/ldml/0.1">
	<identity>
		<version number="0.0.1"/>
		<language type="ngl"/>
		<special>
			<sil:identity defaultRegion="MZ" script="Latn"/>
		</special>
	</identity>
	<layout>
		<orientation>
			<characterOrder>left-to-right</characterOrder>
			<lineOrder>top-to-bottom</lineOrder>
		</orientation>
	</layout>
	<characters>
		<exemplarCharacters draft="tentative" references="L001">[a e i o u {aa} {ee} {ii} {oo} {uu} c h k {kh} l {ly} m n p {ph} {pw} r s t v w y]</exemplarCharacters>
		<exemplarCharacters type="auxiliary" draft="tentative">[b d f g j q x z]</exemplarCharacters>
		<exemplarCharacters type="punctuation" draft="tentative">[. , ; : ? ! ( )]</exemplarCharacters>

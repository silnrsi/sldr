<?xml version='1.0' encoding='utf-8'?>
<ldml xmlns:sil="urn://www.sil.org/ldml/0.1">
  <identity>
  	<special xmlns:sil="urn://www.sil.org/ldml/0.1">
   		 <sil:identity defaultRegion="SS"/>  <!-- country code - 2 letters -->
   	 </special>
    <language type="lpx"/>   <!-- language code - should match file name, 2 or 3 letters -->
    <script type="Latn"/>    <!-- script code -->
  </identity>
  <characters>
  	<!-- use draft="proposed" for more-than-typically reliable data -->
  	<!-- only necessary to put a single references attribute on the main exemplar list. -->
    <exemplarCharacters type="" draft="tentative" references="L001">[ a b c d e f g h i j k l m n {ny} ŋ o p r s t u w y ]</exemplarCharacters>
    <exemplarCharacters type="auxiliary" draft="tentative">[ q v x z ]</exemplarCharacters>
    <exemplarCharacters type="index" draft="tentative">[ A B C D E F G H I J K L M N {Ny} Ŋ O P R S T U W Y ]</exemplarCharacters>
    <exemplarCharacters type="punct" draft="tentative">[ . , ; : ? ! ( ) ]</exemplarCharacters>
  </characters>
  <numberingSystem id="latn" type="numeric" digits="0123456789"/>
  <delimiters>
 		<quotationStart>“</quotationStart>     <!-- outer quotes -->
		<quotationEnd>”</quotationEnd>
		<alternateQuotationStart>‘</alternateQuotationStart>  <!-- inner quotes -->
		<alternateQuotationEnd>’</alternateQuotationEnd>
  </delimiters>
  <layout>
    <orientation characters="left-to-right" lines="top-to-bottom"/>  <!-- right-to-left -->
  </layout>
  <special>
    <sil:external-resources>
		<!--check if language uses font features; if so, use syntax from original full template and reference ldml_fontsAndFeatures.css -->
      <sil:font engines="ot" name="Charis SIL" features="cv43=0" references="L002">
        <sil:url>https://wirl.api.sil.org/CharisSIL</sil:url>
      </sil:font>
      <sil:font engines="gr" name="Charis SIL" features="Engs=0">
        <sil:url>https://wirl.api.sil.org/CharisSIL</sil:url>
      </sil:font>
    </sil:external-resources>
  </special>
  <collations>
    <collation type="standard" references="L001">  <!-- generally type will be 'standard' -->
			<sil:simple>a/A 
            b/B 
            c/C 
            d/D 
            e/E 
            f/F 
            g/G 
            h/H 
            i/I 
            j/J 
            k/K 
            l/L 
            m/M 
            n/N 
            ny 
            ŋ/Ŋ 
            o/O 
            p/P 
            r/R 
            s/S 
            t/T 
            u/U 
            w/W 
            y/Y</sil:simple>
			</special>
    </collation>
  </collations>
  <references>
  	<reference type="L001"> REAP; Lopit Consonant & Vowel Book, 2015.
  	</reference>
    <reference type="L002" uri="https://software.sil.org/charis/wp-content/uploads/sites/14/2015/11/CharisSIL-features5.000.pdf"> CharisSIL-features pdf file 
    </reference>
  </references>
</ldml>

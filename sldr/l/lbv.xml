<?xml version="1.0" encoding="utf-8"?>
<ldml xmlns:sil="urn://www.sil.org/ldml/0.1">
	<identity>
		<version number="0.0.1"/>
		<language type="lbv"/>
		<special>
			<sil:identity defaultRegion="PG" script="Latn"/>
		</special>
	</identity>
	<layout>
		<orientation>
			<characterOrder>left-to-right</characterOrder>
			<lineOrder>top-to-bottom</lineOrder>
		</orientation>
	</layout>
	<characters>
		<exemplarCharacters draft="tentative" references="L001">[a {aa} b d e g x i k l m n {ng} o p r s t u w z]</exemplarCharacters>
		<exemplarCharacters type="auxiliary" draft="tentative">[c f h j q v y]</exemplarCharacters>
		<exemplarCharacters type="punctuation" draft="tentative">[. , ; : ? ! ( )]</exemplarCharacters>
		<exemplarCharacters type="index" draft="tentative">[A {AA} B D E G X I K L M N {NG} O P R S T U W Z]</exemplarCharacters>
	</characters>
	<delimiters>
		<quotationStart>“</quotationStart>
		<quotationEnd>”</quotationEnd>
		<alternateQuotationStart>‘</alternateQuotationStart>
		<alternateQuotationEnd>’</alternateQuotationEnd>
	</delimiters>
	<numbers>
		<defaultNumberingSystem>latn</defaultNumberingSystem>
	</numbers>
	<collations>
		<collation type="standard" references="L001">
			<cr><![CDATA[
				&A < aa <<< Aa <<< AA
				&G < x <<< X
				&N < ng <<< Ng <<< NG
			]]></cr>
			<special>
				<sil:simple>a/A
				aa
				b/B
				d/D
				e/E
				g/G
				x/X
				i/I
				k/K
				l/L
				m/M
				n/N
				ng
				o/O
				p/P
				r/R
				s/S
				t/T
				u/U
				w/W
				z/Z</sil:simple>
			</special>
		</collation>
	</collations>
	<references>
		<reference type="L001">REAP; Lamasong Orthography, 2018.</reference>
	</references>
	<special>
		<sil:external-resources>
			<sil:font name="Charis SIL" engines="ot gr">
				<sil:url>https://wirl.api.sil.org/CharisSIL</sil:url>
			</sil:font>
		</sil:external-resources>
	</special>
</ldml>
